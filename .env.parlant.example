# Parlant Integration Configuration for Open-Interpreter - MAXIMUM IMPLEMENTATION
# 
# Environment variables for Parlant conversational AI validation system
# implementing function-level validation across ALL Open-Interpreter code
# execution, computer automation, and AI interaction functions.
#
# Copy this file to .env and configure for your environment.

# ===== CORE FUNCTIONALITY =====

# Enable/disable Parlant integration (default: true)
PARLANT_ENABLED=true

# Enable validation result caching for performance (default: true)
PARLANT_CACHE_ENABLED=true

# Enable comprehensive audit trail logging (default: true)
PARLANT_AUDIT_ENABLED=true

# ===== PERFORMANCE CONFIGURATION =====

# Cache entry maximum age in milliseconds (default: 300000 = 5 minutes)
PARLANT_CACHE_MAX_AGE_MS=300000

# Individual validation timeout in milliseconds (default: 5000 = 5 seconds)
PARLANT_VALIDATION_TIMEOUT_MS=5000

# Maximum cache entries before cleanup (default: 1000)
PARLANT_CACHE_SIZE=1000

# Maximum concurrent validations (default: 5)
PARLANT_CONCURRENT_VALIDATIONS=5

# Performance metrics reporting interval (default: 60000 = 1 minute)
PARLANT_METRICS_INTERVAL_MS=60000

# ===== SECURITY SETTINGS =====

# Require explicit approval for high-risk operations (default: true)
PARLANT_REQUIRE_HIGH_RISK_APPROVAL=true

# Enable threat detection and analysis (default: true)
PARLANT_ENABLE_THREAT_DETECTION=true

# Maximum failed validations before blocking (default: 5)
PARLANT_MAX_FAILED_VALIDATIONS=5

# Suspicious activity threshold for enhanced monitoring (default: 3)
PARLANT_SUSPICIOUS_THRESHOLD=3

# Session timeout for conversation context (default: 3600000 = 1 hour)
PARLANT_SESSION_TIMEOUT_MS=3600000

# ===== PARLANT API CONFIGURATION =====

# Parlant API base URL (when integrating with external Parlant service)
PARLANT_API_BASE_URL=http://localhost:8000

# Parlant API authentication key (required for external service)
# PARLANT_API_KEY=your_api_key_here

# API request timeout in milliseconds (default: 10000 = 10 seconds)
PARLANT_API_TIMEOUT_MS=10000

# Number of API request retries on failure (default: 3)
PARLANT_API_RETRIES=3

# ===== OPEN-INTERPRETER SPECIFIC VALIDATION =====

# Enable code execution validation (default: true)
PARLANT_VALIDATE_CODE_EXECUTION=true

# Enable computer automation validation (default: true)
PARLANT_VALIDATE_COMPUTER_AUTOMATION=true

# Enable AI interaction validation (default: true)
PARLANT_VALIDATE_AI_INTERACTIONS=true

# Enable job execution validation (default: true)
PARLANT_VALIDATE_JOB_EXECUTION=true

# Enable terminal command validation (default: true)
PARLANT_VALIDATE_TERMINAL_COMMANDS=true

# ===== CODE EXECUTION SECURITY =====

# Code execution risk assessment level (default: high)
PARLANT_CODE_EXECUTION_RISK=high

# Dangerous code patterns detection (default: true)
PARLANT_DETECT_DANGEROUS_PATTERNS=true

# System command validation (default: true)
PARLANT_VALIDATE_SYSTEM_COMMANDS=true

# File operation validation (default: true)
PARLANT_VALIDATE_FILE_OPERATIONS=true

# Network operation validation (default: true)
PARLANT_VALIDATE_NETWORK_OPERATIONS=true

# ===== CONVERSATION MANAGEMENT =====

# Maximum conversation history entries to maintain (default: 100)
PARLANT_MAX_CONVERSATION_HISTORY=100

# Conversation context cleanup interval (default: 1800000 = 30 minutes)
PARLANT_CONVERSATION_CLEANUP_MS=1800000

# Default conversation timeout for inactive sessions (default: 3600000 = 1 hour)
PARLANT_CONVERSATION_TIMEOUT_MS=3600000

# ===== LOGGING CONFIGURATION =====

# Logging level: debug, info, warn, error (default: info)
PARLANT_LOG_LEVEL=info

# Enable detailed audit logging for compliance (default: true)
PARLANT_ENABLE_AUDIT_LOGGING=true

# Enable performance metrics logging (default: true)
PARLANT_ENABLE_PERFORMANCE_LOGGING=true

# Log detailed validation information for debugging (default: false)
# WARNING: May include sensitive code - only enable for troubleshooting
PARLANT_LOG_VALIDATION_DETAILS=false

# Log conversation context for debugging (default: false)
# WARNING: May include sensitive data - only enable for troubleshooting
PARLANT_LOG_CONVERSATION_CONTEXT=false

# ===== OPEN-INTERPRETER OPERATIONAL MONITORING =====

# Monitor interpreter chat interactions (default: true)
PARLANT_MONITOR_CHAT_INTERACTIONS=true

# Monitor code execution patterns (default: true)
PARLANT_MONITOR_CODE_EXECUTION=true

# Monitor computer automation usage (default: true)
PARLANT_MONITOR_COMPUTER_AUTOMATION=true

# Monitor LLM response generation (default: true)
PARLANT_MONITOR_LLM_RESPONSES=true

# Monitor job execution lifecycles (default: true)
PARLANT_MONITOR_JOB_LIFECYCLES=true

# ===== DATA RETENTION =====

# Audit trail retention period in days (default: 90)
PARLANT_AUDIT_RETENTION_DAYS=90

# Cache cleanup interval in milliseconds (default: 600000 = 10 minutes)
PARLANT_CACHE_CLEANUP_INTERVAL_MS=600000

# Maximum audit entries before archival (default: 10000)
PARLANT_MAX_AUDIT_ENTRIES=10000

# ===== ADVANCED FEATURES =====

# Enable batch validation for performance (default: true)
PARLANT_ENABLE_BATCH_VALIDATION=true

# Batch validation size (default: 10)
PARLANT_BATCH_SIZE=10

# Enable predictive validation caching (default: true)
PARLANT_ENABLE_PREDICTIVE_CACHING=true

# Machine learning confidence threshold for auto-approval (default: 0.9)
PARLANT_ML_CONFIDENCE_THRESHOLD=0.9

# Enable conversation context learning (default: true)
PARLANT_ENABLE_CONTEXT_LEARNING=true

# ===== INTEGRATION FEATURES =====

# Enable WebSocket integration for real-time validation (default: true)
PARLANT_ENABLE_WEBSOCKET=true

# WebSocket connection timeout (default: 30000 = 30 seconds)
PARLANT_WEBSOCKET_TIMEOUT_MS=30000

# Enable database audit logging (default: true)
PARLANT_ENABLE_DATABASE_AUDIT=true

# Enable external system notifications (default: false)
PARLANT_ENABLE_EXTERNAL_NOTIFICATIONS=false

# External notification endpoint (if enabled)
# PARLANT_NOTIFICATION_ENDPOINT=https://your-monitoring-system.com/webhooks/parlant

# ===== INTERPRETER-SPECIFIC RISK ASSESSMENT =====

# Shell command execution risk level (default: critical)
PARLANT_SHELL_EXECUTION_RISK=critical

# Python code execution risk level (default: high)
PARLANT_PYTHON_EXECUTION_RISK=high

# JavaScript execution risk level (default: high)
PARLANT_JAVASCRIPT_EXECUTION_RISK=high

# File system operations risk level (default: medium)
PARLANT_FILESYSTEM_OPERATIONS_RISK=medium

# Network operations risk level (default: high)
PARLANT_NETWORK_OPERATIONS_RISK=high

# ===== DEVELOPMENT AND TESTING =====

# Enable development mode with verbose logging (default: false)
PARLANT_DEVELOPMENT_MODE=false

# Enable test mode with mock validations (default: false)
PARLANT_TEST_MODE=false

# Mock validation response for testing (approved/denied)
PARLANT_MOCK_VALIDATION_RESPONSE=approved

# Enable validation bypass for emergency operations (default: false)
# WARNING: Only enable for emergency maintenance - bypasses all safety checks
PARLANT_EMERGENCY_BYPASS=false

# ===== COMPLIANCE AND REGULATORY =====

# Enable GDPR compliance features (default: true)
PARLANT_ENABLE_GDPR_COMPLIANCE=true

# Enable SOX compliance features (default: true)
PARLANT_ENABLE_SOX_COMPLIANCE=true

# Enable HIPAA compliance features (default: false)
PARLANT_ENABLE_HIPAA_COMPLIANCE=false

# Data classification level (public/internal/confidential/restricted)
PARLANT_DATA_CLASSIFICATION=internal

# Enable data anonymization for audit logs (default: true)
PARLANT_ENABLE_DATA_ANONYMIZATION=true

# ===== MONITORING AND ALERTING =====

# Enable health check endpoint (default: true)
PARLANT_ENABLE_HEALTH_CHECK=true

# Health check interval in milliseconds (default: 30000 = 30 seconds)
PARLANT_HEALTH_CHECK_INTERVAL_MS=30000

# Enable Prometheus metrics export (default: true)
PARLANT_ENABLE_PROMETHEUS_METRICS=true

# Prometheus metrics port (default: 9090)
PARLANT_PROMETHEUS_PORT=9090

# Enable alerting for validation failures (default: true)
PARLANT_ENABLE_FAILURE_ALERTS=true

# Alert threshold for validation failure rate (default: 0.1 = 10%)
PARLANT_FAILURE_ALERT_THRESHOLD=0.1

# ===== INTERPRETER SAFETY CONTROLS =====

# Auto-run mode safety validation (default: true)
PARLANT_VALIDATE_AUTO_RUN=true

# Offline mode operation validation (default: true)
PARLANT_VALIDATE_OFFLINE_MODE=true

# Safe mode override protection (default: true)
PARLANT_PROTECT_SAFE_MODE=true

# Loop mode execution validation (default: true)
PARLANT_VALIDATE_LOOP_MODE=true

# Terminal interface command validation (default: true)
PARLANT_VALIDATE_TERMINAL_INTERFACE=true

